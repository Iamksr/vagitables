<div class="container">
    <h3 class="h3">Vegitable Garden </h3>
    <div class="row">
    <% @vegitables.each do |vegitable| %>
        <div class="col-md-3 col-sm-6">
            <div class="vegitable-grid4">
                <div class="img-hover-zoom">
                    <a href="#">
                      <%= image_tag(vegitable.image_url, :size => "160x180") %>
                        
                    </a>
                    <ul class="social">
                        <li><a href="#" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                        <li><a href="#" data-tip="Add to Wishlist"><i class="fa fa-shopping-cart"></i></a></li>
                        <!-- <li><a href="#" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li> -->
                    </ul>
                    <span class="vegitable-new-label">New</span>

                   <span class="vegitable-discount-label"><%= vegitable.discount_percentage.to_f.round(2) %>%</span>
                   (<%= vegitable.discount_percentage.to_f.round(2)%> 
                </div>
                
                <div class="vegitable-content">
                     <h3 style="min-height: 70px !important;"><%= vegitable.name %></h3>
                    <div class="price">
                      ₹<%= vegitable.price%>
                   <s>₹<%=vegitable.current_price %></s>  
                    </div>
                    <a class="add-to-cart" href="#">ADD TO CART</a>
                </div>
            </div>
        </div>
        <% end %>
    </div><br>
 
</div>
<%= link_to 'New Vegitable', new_vegitable_path %>


