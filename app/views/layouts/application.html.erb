<html>
  <head>
    <title>ECommerce</title>
    <%= csrf_meta_tags %>
    <%#= javascript_include_tag 'jquery.raty.js', "data-turbolinks-track": false %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
  </head>
  <body>
    <!--Navbar -->
    <nav class="mb-1 navbar navbar-expand-lg navbar-dark default-color navbar-color">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
        aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home
            <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/vegitables/new">Add Vegitable</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/vegitables/">Vegitables</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " href="/categories">Category</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Report</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false", style="cursor: pointer;">Search product with category
            </a>
            <div class="dropdown-menu dropdown-default" aria-labelledby="             navbarDropdownMenuLink-333">
              <% Category.all.each do |form|%>
              <a href="/category/<%= form.id %>" class="dropdown-item">
              <%= form.name %><br>
              </a>
              <% end %>
            </div>
          </li>
        </ul>
        <div class="col-sm-4 col-md-4 pull-right">
          <%= form_tag "/vegitables", :method=>"get" do %>
          <div class="input-group">
            <%= text_field_tag :search, nil, :placeholder=>"Search for Vegitables", class: 'form-control' %>
            <button class="btn btn-default input-group-btn" type="submit"><i class="glyphicon glyphicon-search">Search</i></button>
          </div>
          <% end %>
        </div>
        <!--  -->
        <ul class="navbar-nav ml-auto nav-flex-icons">
          <!-- <li class="nav-item"> -->
          <!-- <a class="nav-link" href="/addresses/new"><i class="fa fa-home"></i></a> -->
          <!-- </li> -->
          <li class="nav-item">
            <a class="nav-link" href="/wishlist"><i class="fa fa-heart">  </i><span>
            <% if current_user.present? %><%= current_user.wishlists.count rescue nil %></span>
            <% end %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">
            <i class="fa fa-shopping-cart"></i><span>
            <!-- <%# cart = Cart.where(is_done: false).first %>
            <%# if current_user.present? %><%#=  current_cart.cart_items.count rescue nil %></span>
            <%# end %> -->
            </a>
          </li>
          <!-- User Authentication -->
          <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="fas fa-user"><%= current_user.name %></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/cart">My Carts</a>
              <a class="dropdown-item" href="/orders">My Orders</a>
              <a class="dropdown-item" href="/user_profile">My Profile</a>
              <a class="dropdown-item" href="/users/sign_out">Sign Out</a>
              <!-- <a class="dropdown-item" href="#"> <%#= link_to 'Profile',  userpath%></a> -->
              <!-- <a class="dropdown-item" href="#"><%#= link_to "Logout", destroy_user_session_path, method: :delete %></a> -->
              <% else %>
              <div class="dropdown-divider"></div>
              &nbsp;&nbsp;&nbsp;
          <li><a class="dropdown-item" href="#"><%= link_to "Login", new_user_session_path %></a></li> 
          </div> 
          </li>
          <% end %>
          <!--  -->
        </ul>
      </div>
    </nav>
    <!--/.Navbar -->
    <%= yield %>
  </body>
</html>

